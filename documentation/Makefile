	doxygen

areaDetectorDoc.pdf:
	-htmldoc --book --duplex --no-numbered --format pdf14 --title --size letter --outfile html/areaDetectorDoc.pdf ../ADCore/documentation/areaDetectorDoc.html

iocBootDocs:
	./makeIOCBootDocs

copyFromSource:
	./makeHTML.pl

copyToWebServer:
	cp -rfp html/* /home/epics/web_software/epics

clean:
	rm -rf html


realclean: clean
